<li id="post-<%= li.id %>">
  <h3>
    <%= link_to "#{li.category.name} / #{li.title}", '/edit/' + li.to_s %>
    <span class="links">
      <%= link_to 'view', li.slug, :class => 'admin-view' %>
      <%= link_to 'x', li, data: { confirm: 'Are you sure?'}, :method => :delete, :class => 'admin-delete' %>
    </span>
  </h3>
</li>
